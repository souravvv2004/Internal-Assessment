<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Student's Portal</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      margin-top: 60px;
    }
    .navbar-profile {
      display: flex;
      align-items: center;
    }
    .navbar-profile img {
      border-radius: 50%;
      margin-left: 10px;
      width: 40px;
      height: 40px;
    }
    .courses, .assignments {
      margin-top: 20px;
    }
  </style>
</head>
<body>

  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
    <div class="container-fluid">
      <a class="navbar-brand" href="#">Student's Portal</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="#"></a>
          </li>
          <li class="nav-item navbar-profile">
            <span class="text-light"><%= student.Name %></span> <!-- Student's name passed from backend -->
            <!-- <img src= alt="Profile Photo"> -->
          </li>
        </ul>
      </div>
    </div>
  </nav>
  
  <!-- Courses Section -->
  <div class="container courses">
    <h2>Courses</h2>
    
        <% if (courses.length>0) { %>
         
    <div class="row">
      <% courses.forEach(course => { %> <!-- Courses array passed from backend -->
        <div class="col-md-4">
          <div class="card">
            <!-- <img src="<%# course.image %>" class="card-img-top" alt="Course Image"> -->
            <div class="card-body">
              <h3 class="card-title"><%= course["courseID"] %></h3>
              <h5 class="card-text"><%= course["courseName"] %></h5>
              <a href="/courses" class="btn btn-primary">View Course</a>
            </div>
          </div>
        </div>
    
         
        <% }) %>
     
         <% } else { %>
        <p>No Courses have been courseAlloted.</p>
      <% } %>
    
  </div>

  <!-- Assignments Section -->
  <div class="container assignments">
    <h2>Assignments</h2>

    <!-- Pending Assignments Table -->
    <div class="mt-3">
      <h5>Pending Assignments</h5>
      <% if (pendingAssignments.length > 0) { %>
        <table class="table table-bordered">
          <thead>
            <tr>
              <th>Assignment Name</th>
              <th>Deadline</th>
              <th>Status</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% pendingAssignments.forEach(assignment => { %>
              <tr>
                <td><%= assignment.assignmentName %></td>
                <td><%= new Date(assignment.endDate).toLocaleDateString("en-US", { 
                  year: "numeric", month: "short", day: "numeric", hour: "2-digit", minute: "2-digit" 
                }) %></td>
                <td>Pending</td>
                <td><a href="/assignment/<%= assignment.assignmentID %>" class="btn btn-info">View Details</a></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      <% } else { %>
        <p>No pending assignments.</p>
      <% } %>
    </div>

    <!-- Submitted Assignments Table -->
    <div class="mt-3">
      <h5>Submitted Assignments</h5>
      <% if (submittedAssignments.length > 0) { %>
        <table class="table table-bordered">
          <thead>
            <tr>
              <th>Assignment Name</th>
              <th>Submission Date</th>
              <th>Status</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% submittedAssignments.forEach(assignment => { %>
              <tr>
                <td><%= assignment.assignmentName %></td>
                <td><%= new Date(assignment.submissionDate).toLocaleDateString("en-US", { 
                  year: "numeric", month: "short", day: "numeric", hour: "2-digit", minute: "2-digit" 
                }) %></td>
                <td>Submitted</td>
                <td><a href="/assignment/<%= assignment.assignmentID %>" class="btn btn-info">View Details</a></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      <% } else { %>
        <p>No assignments have been submitted.</p>
      <% } %>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
