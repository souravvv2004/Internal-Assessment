<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Course Dashboard</title>
    <!-- Bootstrap CSS CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
    <!-- Header Section with Course Name -->
    <div class="bg-primary text-white text-center py-4 mb-4">
        <h1 class="h3"><%= courseName %></h1>
        <p class="mb-0">Course Dashboard</p>
    </div>

    <div class="container">
        <!-- List of Allotted Students -->
        <div class="mb-4">
            <h2 class="h5 mb-3">Allotted Students</h2>
            <ul class="list-group">
                <% students.forEach(student => { %>
                    <li class="list-group-item">
                        <strong><%= student.studentID %></strong> - <%= student.Name %>
                    </li>
                <% }); %>
            </ul>
        </div>

        <!-- List of Assignments -->
        <div class="mb-4">
            <h2 class="h5 mb-3">Assignments</h2>
            <ul class="list-group">
                <% assignments.forEach(assignment => { %>
                    <li class="list-group-item">
                        <strong><%= assignment.assignmentName %></strong> - Due: <%= assignment.endDate %>
                        <a href="<%= assignment.assignmentPath %>" class="btn btn-sm btn-outline-primary float-end">View</a>
                    </li>
                <% }); %>
            </ul>
        </div>

        <!-- List of Faculty Members -->
        <div>
            <h2 class="h5 mb-3">Faculty</h2>
            <ul class="list-group">
                <% faculty.forEach(facultyMember => { %>
                    <li class="list-group-item">
                        <strong><%= facultyMember.teacherID %></strong> - <%= facultyMember.Name %>
                    </li>
                <% }); %>
            </ul>
        </div>
    </div>
</body>
</html>
